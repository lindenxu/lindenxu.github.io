{
  "name": "light-dark",
  "version": "1.0.0",
  "description": "light-dark theme",
  "scripts": {
    "dev-theme": "npx tailwindcss -i assets/css/main.css -o assets/css/index.css --watch",
    "dev-hugo": "hugo server -s demo --themesDir=../.. -D --disableFastRender --navigateToChanged --ignoreCache --bind 0.0.0.0",
    "dev": "run-p dev-theme dev-hugo"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.12",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.3"
  }
}
